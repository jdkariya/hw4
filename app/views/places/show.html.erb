<h1><%= @place["name"] %></h1>
<p>
  <a class="btn btn-dark" href="/posts/new?place_id=<%= @place["id"] %>">New Post About <%=@place["name"]%></a>
</p>
<p>
<h2>My Posts</h2>
</p>
<% if @current_user%>
<div class="row gy-3">
  <% for post in @posts %>
    <div class="col-md-4 col-sm-6">
      <h3><%= post["title"] %></h3>
      <h4><%= post["posted_on"] %></h4>
      <% if post.uploaded_image.attached? %>
          <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
        <% else %>
          <img src="<%= post["image"] %>" class="img-fluid">
      <% end %>
        <p><%= post["description"] %></p>
    </div>
  <% end %>
</div>


<p>
  <a class="btn btn-secondary" href="/places">Back to All Places</a>
</p>


<% else%>
  <%flash["notice"] = "Please login."%>
<% end%>